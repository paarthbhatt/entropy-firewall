# =============================================================================
# Entropy LLM Firewall â€” Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.

# --- Application ---
ENTROPY_APP_NAME="Entropy LLM Firewall"
ENTROPY_VERSION="0.1.0"
ENTROPY_ENVIRONMENT=development
ENTROPY_DEBUG=true
ENTROPY_LOG_LEVEL=INFO

# --- Server ---
ENTROPY_HOST=0.0.0.0
ENTROPY_PORT=8000
ENTROPY_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# --- Database (PostgreSQL) ---
ENTROPY_DB_HOST=localhost
ENTROPY_DB_PORT=5432
ENTROPY_DB_NAME=entropy
ENTROPY_DB_USER=entropy
ENTROPY_DB_PASSWORD=entropy_password
ENTROPY_DB_MIN_CONNECTIONS=2
ENTROPY_DB_MAX_CONNECTIONS=10

# --- Redis ---
ENTROPY_REDIS_URL=redis://localhost:6379/0

# --- LLM Provider Keys ---
OPENAI_API_KEY=sk-your-openai-api-key-here

# --- Rate Limiting ---
ENTROPY_RATE_LIMIT_RPM=60
ENTROPY_RATE_LIMIT_WINDOW=60
ENTROPY_RATE_LIMIT_BURST=10

# --- Security ---
ENTROPY_MASTER_API_KEY=ent-change-this-in-production

# --- Detection Thresholds ---
ENTROPY_PATTERN_THRESHOLD=0.7
ENTROPY_BLOCK_ON_DETECTION=true
